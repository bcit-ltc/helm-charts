{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "qcon-api Helm Values Schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "global": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string" },
        "imagePullSecrets": {
          "type": "array",
          "items": {
            "anyOf": [
              { "type": "string" },
              {
                "type": "object",
                "additionalProperties": false,
                "properties": { "name": { "type": "string" } },
                "required": ["name"]
              }
            ]
          }
        },
        "revisionHistoryLimit": { "type": "integer", "minimum": 0 },
        "progressDeadlineSeconds": { "type": "integer", "minimum": 1 }
      }
    },

    "serviceAccount": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "create": { "type": "boolean" },
        "name": { "type": "string" },
        "createSecret": { "type": "boolean" },
        "extraLabels": { "type": "object", "additionalProperties": { "type": "string" } },
        "annotations": { "type": "object", "additionalProperties": { "type": "string" } }
      }
    },

    "processor": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": { "type": "boolean" },
        "image": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "registry": { "type": "string" },
            "repository": { "type": "string" },
            "tag": { "type": "string" },
            "pullPolicy": { "type": "string", "enum": ["Always", "IfNotPresent", "Never"] }
          },
          "required": ["repository", "tag"]
        },
        "replicas": { "type": "integer", "minimum": 0 },
        "extraLabels": { "type": "object", "additionalProperties": { "type": "string" } },
        "annotations": { "type": "object", "additionalProperties": { "type": "string" } },
        "port": { "type": "integer", "minimum": 1, "maximum": 65535 },

        "extraEnvVars": {
          "anyOf": [
            { "type": "array", "items": { "type": "object", "minProperties": 1, "additionalProperties": { "type": ["string", "number", "boolean", "null"] } } },
            { "type": "object", "minProperties": 1, "additionalProperties": { "type": ["string", "number", "boolean", "null"] } }
          ]
        },

        "configEnvs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": { "name": { "type": "string" } },
            "additionalProperties": { "type": "string" },
            "required": ["name"]
          }
        },

        "configs": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string" },
              "data": { "type": "object", "additionalProperties": { "type": "string" } }
            },
            "required": ["name", "data"]
          }
        },

        "volumeMounts": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string" },
              "mountPath": { "type": "string" },
              "subPath": { "type": "string" },
              "readOnly": { "type": "boolean" }
            },
            "required": ["name", "mountPath"]
          }
        },
        "configMounts": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string" },
              "mountPath": { "type": "string" },
              "subPath": { "type": "string" }
            },
            "required": ["name", "mountPath"]
          }
        },
        "secretMounts": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string" },
              "secretName": { "type": "string" },
              "mountPath": { "type": "string" },
              "readOnly": { "type": "boolean" },
              "optional": { "type": "boolean" },
              "items": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "key": { "type": "string" },
                    "path": { "type": "string" },
                    "mode": { "type": "integer", "minimum": 0 }
                  },
                  "required": ["key", "path"]
                }
              }
            },
            "required": ["name", "secretName", "mountPath"]
          }
        }
      }
    },

    "service": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": { "type": "boolean" },
        "type": { "type": "string", "enum": ["ClusterIP", "NodePort", "LoadBalancer"] },
        "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
        "targetPort": {
          "anyOf": [
            { "type": "integer", "minimum": 1, "maximum": 65535 },
            { "type": "string", "minLength": 1 }
          ]
        },
        "annotations": { "type": "object", "additionalProperties": { "type": "string" } }
      }
    },

    "ingress": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": { "type": "boolean" },
        "extraLabels": { "type": "object", "additionalProperties": { "type": "string" } },
        "annotations": { "type": "object", "additionalProperties": { "type": "string" } },
        "ingressClassName": { "type": "string" },
        "pathType": { "type": "string", "enum": ["ImplementationSpecific", "Exact", "Prefix"] },
        "hosts": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "host": { "type": "string" },
              "paths": { "type": "array", "items": { "type": "object", "additionalProperties": true } }
            },
            "required": ["host", "paths"]
          }
        },
        "extraPaths": { "type": "array", "items": { "type": "object", "additionalProperties": true } },
        "tls": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "secretName": { "type": "string" },
              "hosts": { "type": "array", "items": { "type": "string" } }
            },
            "required": ["secretName", "hosts"]
          }
        }
      }
    },

    "frontend": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": { "type": "boolean" },
        "name": { "type": "string" },
        "image": { "type": "string" },
        "pullPolicy": { "type": "string", "enum": ["Always", "IfNotPresent", "Never"] },
        "annotations": { "type": "object", "additionalProperties": { "type": "string" } },
        "includeConfigAnnotation": { "type": "boolean" },
        "securityContext": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "pod": { "type": "object", "additionalProperties": true },
            "container": { "type": "object", "additionalProperties": true }
          }
        },

        "configs": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string" },
              "data": { "type": "object", "additionalProperties": { "type": "string" } }
            },
            "required": ["name", "data"]
          }
        },

        "resources": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "requests": { "type": "object", "additionalProperties": { "type": "string" } },
            "limits": { "type": "object", "additionalProperties": { "type": "string" } }
          }
        },

        "port": { "type": "integer", "minimum": 1, "maximum": 65535 },

        "extraEnvVars": {
          "anyOf": [
            { "type": "array", "items": { "type": "object", "minProperties": 1, "additionalProperties": { "type": ["string", "number", "boolean", "null"] } } },
            { "type": "object", "minProperties": 1, "additionalProperties": { "type": ["string", "number", "boolean", "null"] } }
          ]
        },

        "configEnvs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": { "name": { "type": "string" } },
            "additionalProperties": { "type": "string" },
            "required": ["name"]
          }
        },

        "configsDeprecated": { "deprecated": true },

        "volumeMounts": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string" },
              "mountPath": { "type": "string" },
              "subPath": { "type": "string" },
              "readOnly": { "type": "boolean" }
            },
            "required": ["name", "mountPath"]
          }
        },
        "configMounts": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string" },
              "mountPath": { "type": "string" },
              "subPath": { "type": "string" }
            },
            "required": ["name", "mountPath"]
          }
        },
        "secretMounts": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string" },
              "secretName": { "type": "string" },
              "mountPath": { "type": "string" },
              "readOnly": { "type": "boolean" },
              "optional": { "type": "boolean" },
              "items": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "key": { "type": "string" },
                    "path": { "type": "string" },
                    "mode": { "type": "integer", "minimum": 0 }
                  },
                  "required": ["key", "path"]
                }
              }
            },
            "required": ["name", "secretName", "mountPath"]
          }
        },

        "livenessProbe": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": { "type": "boolean" },
            "execCommand": { "type": "array", "items": { "type": "string" } },
            "path": { "type": "string" },
            "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
            "failureThreshold": { "type": "integer", "minimum": 1 },
            "initialDelaySeconds": { "type": "integer", "minimum": 0 },
            "periodSeconds": { "type": "integer", "minimum": 1 },
            "successThreshold": { "type": "integer", "minimum": 1 },
            "timeoutSeconds": { "type": "integer", "minimum": 1 }
          }
        },
        "readinessProbe": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": { "type": "boolean" },
            "path": { "type": "string" },
            "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
            "failureThreshold": { "type": "integer", "minimum": 1 },
            "initialDelaySeconds": { "type": "integer", "minimum": 0 },
            "periodSeconds": { "type": "integer", "minimum": 1 },
            "successThreshold": { "type": "integer", "minimum": 1 },
            "timeoutSeconds": { "type": "integer", "minimum": 1 }
          }
        },
        "startupProbe": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "enabled": { "type": "boolean" },
            "failureThreshold": { "type": "integer", "minimum": 1 },
            "initialDelaySeconds": { "type": "integer", "minimum": 0 },
            "periodSeconds": { "type": "integer", "minimum": 1 },
            "successThreshold": { "type": "integer", "minimum": 1 },
            "timeoutSeconds": { "type": "integer", "minimum": 1 }
          }
        }
      }
    },

    "backend": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": { "type": "boolean" },
        "name": { "type": "string" },
        "image": { "type": "string" },
        "port": { "type": "integer", "minimum": 1, "maximum": 65535 },

        "extraEnvVars": {
          "anyOf": [
            { "type": "array", "items": { "type": "object", "minProperties": 1, "additionalProperties": { "type": ["string", "number", "boolean", "null"] } } },
            { "type": "object", "minProperties": 1, "additionalProperties": { "type": ["string", "number", "boolean", "null"] } }
          ]
        },

        "configEnvs": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": { "name": { "type": "string" } },
            "additionalProperties": { "type": "string" },
            "required": ["name"]
          }
        },

        "configs": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string" },
              "data": { "type": "object", "additionalProperties": { "type": "string" } }
            },
            "required": ["name", "data"]
          }
        },

        "volumeMounts": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string" },
              "mountPath": { "type": "string" },
              "subPath": { "type": "string" },
              "readOnly": { "type": "boolean" }
            },
            "required": ["name", "mountPath"]
          }
        },
        "configMounts": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string" },
              "mountPath": { "type": "string" },
              "subPath": { "type": "string" },
              "optional": { "type": "boolean" },
              "items": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "key": { "type": "string" },
                    "path": { "type": "string" },
                    "mode": { "type": "integer", "minimum": 0 }
                  },
                  "required": ["key", "path"]
                }
              }
            },
            "required": ["name", "mountPath"]
          }
        },
        "secretMounts": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "name": { "type": "string" },
              "secretName": { "type": "string" },
              "mountPath": { "type": "string" },
              "readOnly": { "type": "boolean" },
              "optional": { "type": "boolean" },
              "items": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "key": { "type": "string" },
                    "path": { "type": "string" },
                    "mode": { "type": "integer", "minimum": 0 }
                  },
                  "required": ["key", "path"]
                }
              }
            },
            "required": ["name", "secretName", "mountPath"]
          }
        }
      }
    },

    "dataStorage": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": { "type": "boolean" },
        "size": {
          "type": "string",
          "pattern": "^[0-9]+(Ki|Mi|Gi|Ti|Pi|Ei)?$"
        },
        "mountPath": { "type": "string" },
        "storageClass": { "type": ["string", "null"] },
        "accessMode": {
          "type": "string",
          "enum": ["ReadWriteOnce", "ReadOnlyMany", "ReadWriteMany", "ReadWriteOncePod"]
        },
        "annotations": { "type": "object", "additionalProperties": { "type": "string" } },
        "labels": { "type": "object", "additionalProperties": { "type": "string" } }
      }
    }
  }
}
