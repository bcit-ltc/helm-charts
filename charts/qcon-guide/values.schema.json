{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/qcon-guide/values.schema.json",
  "title": "qcon-guide values",
  "type": "object",
  "additionalProperties": true,

  "definitions": {
    "imagePullPolicy": {
      "type": "string",
      "enum": ["Always", "IfNotPresent", "Never"]
    },
    "serviceType": {
      "type": "string",
      "enum": ["ClusterIP", "NodePort", "LoadBalancer"]
    },
    "annotations": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "labels": {
      "type": "object",
      "additionalProperties": {
        "type": ["string", "number", "boolean"]
      }
    },
    "resources": {
      "type": "object",
      "properties": {
        "requests": { "type": "object", "additionalProperties": { "type": "string" } },
        "limits":   { "type": "object", "additionalProperties": { "type": "string" } }
      },
      "additionalProperties": false
    },
    "securityContext": {
      "type": "object",
      "additionalProperties": true
    },
    "envListLiteral": {
      "description": "Either a map of KEY: value or a list of one-key maps (literal env only).",
      "oneOf": [
        { "type": "object", "additionalProperties": { "type": ["string", "number", "boolean"] } },
        {
          "type": "array",
          "items": {
            "type": "object",
            "minProperties": 1,
            "maxProperties": 1,
            "additionalProperties": { "type": ["string", "number", "boolean"] }
          }
        }
      ]
    },
    "envListK8s": {
      "description": "Standard Kubernetes EnvVar items, e.g., for backend.extraEnv.",
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "name": { "type": "string" },
          "value": { "type": "string" },
          "valueFrom": { "type": "object" }
        },
        "required": ["name"]
      }
    },
    "configItem": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "data": { "type": "object", "additionalProperties": { "type": "string" } }
      },
      "required": ["name"],
      "additionalProperties": true
    },
    "configEnvItem": {
      "type": "object",
      "properties": {
        "name": { "type": "string" }
      },
      "required": ["name"],
      "additionalProperties": true
    },
    "volumeMount": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "mountPath": { "type": "string" },
        "readOnly": { "type": "boolean" },
        "subPath": { "type": ["string", "number", "boolean"] }
      },
      "required": ["name", "mountPath"],
      "additionalProperties": true
    },
    "secretMount": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "secretName": { "type": "string" },
        "mountPath": { "type": "string" },
        "readOnly": { "type": "boolean" },
        "optional": { "type": "boolean" },
        "items": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "key": { "type": "string" },
              "path": { "type": "string" },
              "mode": { "type": ["string", "number"] }
            },
            "required": ["key", "path"],
            "additionalProperties": false
          }
        }
      },
      "required": ["name", "secretName", "mountPath"],
      "additionalProperties": true
    },
    "imageBlock": {
      "type": "object",
      "properties": {
        "registry": { "type": "string" },
        "repository": { "type": "string" },
        "tag": { "type": "string" },
        "pullPolicy": { "$ref": "#/definitions/imagePullPolicy" }
      },
      "required": ["registry", "repository", "tag"],
      "additionalProperties": false
    },
    "probesCommon": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "failureThreshold": { "type": "integer", "minimum": 1 },
        "initialDelaySeconds": { "type": "integer", "minimum": 0 },
        "periodSeconds": { "type": "integer", "minimum": 1 },
        "successThreshold": { "type": "integer", "minimum": 1 },
        "timeoutSeconds": { "type": "integer", "minimum": 1 }
      },
      "additionalProperties": true
    },
    "storageAccessMode": {
      "type": "string",
      "enum": ["ReadWriteOnce", "ReadOnlyMany", "ReadWriteMany", "ReadWriteOncePod"]
    }
  },

  "properties": {
    "global": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "imagePullSecrets": {
          "type": "array",
          "items": {
            "oneOf": [
              { "type": "string" },
              { "type": "object", "properties": { "name": { "type": "string" } }, "required": ["name"], "additionalProperties": false }
            ]
          }
        },
        "revisionHistoryLimit": { "type": "integer", "minimum": 0 },
        "progressDeadlineSeconds": { "type": "integer", "minimum": 1 }
      },
      "additionalProperties": false
    },

    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": { "type": "boolean" },
        "name": { "type": "string" },
        "createSecret": { "type": "boolean" },
        "extraLabels": { "$ref": "#/definitions/labels" },
        "annotations": { "$ref": "#/definitions/annotations" }
      },
      "additionalProperties": false
    },

    "service": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "type": { "$ref": "#/definitions/serviceType" },
        "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
        "nodePort": { "type": "integer", "minimum": 30000, "maximum": 32767 },
        "annotations": { "$ref": "#/definitions/annotations" }
      },
      "additionalProperties": false
    },

    "frontend": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "name": { "type": "string" },
        "image": { "$ref": "#/definitions/imageBlock" },
        "pullPolicy": { "$ref": "#/definitions/imagePullPolicy" },
        "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
        "annotations": { "$ref": "#/definitions/annotations" },
        "includeConfigAnnotation": { "type": "boolean" },
        "securityContext": {
          "type": "object",
          "properties": {
            "pod": { "$ref": "#/definitions/securityContext" },
            "container": { "$ref": "#/definitions/securityContext" }
          },
          "additionalProperties": false
        },
        "resources": { "$ref": "#/definitions/resources" },
        "extraEnvVars": { "$ref": "#/definitions/envListLiteral" },
        "configEnvs": {
          "type": "array",
          "items": { "$ref": "#/definitions/configEnvItem" }
        },
        "configs": {
          "type": "array",
          "items": { "$ref": "#/definitions/configItem" }
        },
        "volumeMounts": {
          "type": "array",
          "items": { "$ref": "#/definitions/volumeMount" }
        },
        "configMounts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "mountPath": { "type": "string" },
              "subPath": { "type": ["string", "number", "boolean"] }
            },
            "required": ["name", "mountPath"],
            "additionalProperties": true
          }
        },
        "secretMounts": {
          "type": "array",
          "items": { "$ref": "#/definitions/secretMount" }
        },
        "livenessProbe": {
          "allOf": [
            { "$ref": "#/definitions/probesCommon" },
            {
              "type": "object",
              "properties": {
                "execCommand": { "type": "array", "items": { "type": "string" } },
                "path": { "type": "string" },
                "port": { "type": "integer", "minimum": 1, "maximum": 65535 }
              },
              "additionalProperties": true
            }
          ]
        },
        "readinessProbe": {
          "allOf": [
            { "$ref": "#/definitions/probesCommon" },
            {
              "type": "object",
              "properties": {
                "path": { "type": "string" },
                "port": { "type": "integer", "minimum": 1, "maximum": 65535 }
              },
              "additionalProperties": true
            }
          ]
        },
        "startupProbe": { "$ref": "#/definitions/probesCommon" }
      },
      "required": ["image", "port"],
      "additionalProperties": false
    },

    "processor": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "image": { "$ref": "#/definitions/imageBlock" },
        "replicas": { "type": "integer", "minimum": 0 },
        "extraLabels": { "$ref": "#/definitions/labels" },
        "annotations": { "$ref": "#/definitions/annotations" },
        "port": { "type": "integer", "minimum": 1, "maximum": 65535 },
        "extraEnvVars": { "$ref": "#/definitions/envListLiteral" },
        "configEnvs": {
          "type": "array",
          "items": { "$ref": "#/definitions/configEnvItem" }
        },
        "configs": {
          "type": "array",
          "items": { "$ref": "#/definitions/configItem" }
        },
        "volumeMounts": {
          "type": "array",
          "items": { "$ref": "#/definitions/volumeMount" }
        },
        "configMounts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "mountPath": { "type": "string" },
              "subPath": { "type": ["string", "number", "boolean"] }
            },
            "required": ["name", "mountPath"],
            "additionalProperties": true
          }
        },
        "secretMounts": {
          "type": "array",
          "items": { "$ref": "#/definitions/secretMount" }
        }
      },
      "required": ["image", "replicas", "port"],
      "additionalProperties": false
    },

    "backend": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },

        "image": { "type": "string" },
        "imagePullPolicy": { "$ref": "#/definitions/imagePullPolicy" },

        "auth": {
          "type": "object",
          "properties": {
            "existingSecret": { "type": "string" },
            "database": { "type": "string" },
            "username": { "type": "string" },
            "password": { "type": "string" }
          },
          "additionalProperties": false
        },

        "service": {
          "type": "object",
          "properties": {
            "name": { "type": "string" },
            "port": { "type": "integer", "minimum": 1, "maximum": 65535 }
          },
          "required": ["name", "port"],
          "additionalProperties": false
        },

        "storage": {
          "type": "object",
          "properties": {
            "size": { "type": "string" },
            "storageClass": { "type": ["string", "null"] },
            "accessModes": {
              "type": "array",
              "items": { "$ref": "#/definitions/storageAccessMode" },
              "minItems": 1
            },
            "annotations": { "$ref": "#/definitions/annotations" },
            "labels": { "$ref": "#/definitions/labels" }
          },
          "required": ["size", "accessModes"],
          "additionalProperties": false
        },

        "resources": { "$ref": "#/definitions/resources" },
        "nodeSelector": { "type": "object", "additionalProperties": { "type": "string" } },
        "tolerations": { "type": "array", "items": { "type": "object", "additionalProperties": true } },
        "affinity": { "type": "object", "additionalProperties": true },
        "podAnnotations": { "$ref": "#/definitions/annotations" },
        "podLabels": { "$ref": "#/definitions/labels" },

        "securityContext": { "$ref": "#/definitions/securityContext" },
        "containerSecurityContext": { "$ref": "#/definitions/securityContext" },

        "extraEnv": { "$ref": "#/definitions/envListK8s" }
      },
      "required": ["service", "storage"],
      "additionalProperties": false
    },

    "dataStorage": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "size": { "type": "string" },
        "mountPath": { "type": "string" },
        "storageClass": { "type": ["string", "null"] },
        "accessMode": { "$ref": "#/definitions/storageAccessMode" },
        "annotations": { "$ref": "#/definitions/annotations" },
        "labels": { "$ref": "#/definitions/labels" }
      },
      "additionalProperties": false
    },

    "ingress": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "extraLabels": { "$ref": "#/definitions/labels" },
        "annotations": { "$ref": "#/definitions/annotations" },
        "ingressClassName": { "type": "string" },
        "pathType": {
          "type": "string",
          "enum": ["Prefix", "ImplementationSpecific", "Exact"]
        },
        "hosts": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "host": { "type": "string" },
              "paths": { "type": "array", "items": { "type": "object", "additionalProperties": true } }
            },
            "required": ["host"],
            "additionalProperties": false
          }
        },
        "extraPaths": { "type": "array", "items": { "type": "object", "additionalProperties": true } },
        "tls": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "secretName": { "type": "string" },
              "hosts": { "type": "array", "items": { "type": "string" } }
            },
            "required": ["secretName", "hosts"],
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  }
}
